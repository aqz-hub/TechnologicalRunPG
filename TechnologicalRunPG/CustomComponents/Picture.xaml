<UserControl x:Class="TechnologicalRunPG.CustomComponents.Picture"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TechnologicalRunPG.CustomComponents"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60">
    <Grid>

        <Ellipse HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="60">
            <Ellipse.Fill>
                <ImageBrush x:Name="imageBrush" Stretch="UniformToFill" ImageSource="defaultImg.png"/>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>
